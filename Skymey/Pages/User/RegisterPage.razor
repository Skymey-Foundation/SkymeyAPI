@page "/user/register"
@inject HttpClient http

<PageTitle>Sign up</PageTitle>
<div class="container-fluid login-content">
    <div class="row ">
        <div class="col sizing position-relative m-auto">
            <div class="card border-0 pb-2">
                <div class="card-body">
                    <div class="text-center">
                        <img src="/images/logo.png" height="70" width="90" alt="Skymey" />
                    </div>
                    <h4 class="text-logo text-center mt-3">Sign up</h4>
                    <br>
                    <EditForm Model="@registerModel" OnValidSubmit="SubmitForm" class="text-center">
                        <FluentValidationValidator />
                        <label for="Email" class="float-start">Email</label>
                        <InputText class="form-control border-0 text-white" type="email" name="Email" placeholder="Email" @bind-Value="registerModel.Email" />
                        <ValidationMessage For="@(() => registerModel.Email)" />
                        <label for="Password" class="float-start mt-2">Password</label>
                        <InputText class="form-control border-0 text-white" type="text" name="Password" placeholder="Password" @bind-Value="registerModel.Password" />
                        <ValidationMessage For="@(() => registerModel.Password)" />
                        <div class="row">
                            <div class="forgot">
                                <a href="" class=" float-end">Forgot Password?</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <button class="btn btn-primary border-0 text-center" type="submit" name="submit">Sign In</button>
                            </div>
                        </div>

                    </EditForm>
                </div>
                <div class="nomember">
                    <p class="text-center">Already have an Account? <a href="login">Sign in</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
 
@code {
    private RegisterModel registerModel = new RegisterModel();

    private async Task SubmitForm()
    {
        using var response = await http.PostAsJsonAsync("https://localhost:5003/api/SkymeyAPI/User/Register", registerModel);
        var resp = JsonSerializer.Deserialize<UserResponse>(await response.Content.ReadAsStringAsync());
        Console.WriteLine("validate");
    }
}