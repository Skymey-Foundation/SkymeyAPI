<div class="sidebar p-0 m-0 container-fluid">
    <div class="row p-0 m-0">
        <div class="col-12 pe-4 py-2">
            <button title="Navigation menu" class="navbar-toggler float-end" @onclick="ToggleNavMenu">
                <span class="bi bi-list"></span>
            </button>
        </div>
    </div>
    <div class="row p-0 m-0">
        <div class="col-12">
<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>
        <AuthorizeView>
        <NotAuthorized>
        <div class="nav-item px-3 @is_visible">
            <NavLink class="nav-link" href="user/login">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Login
            </NavLink>
        </div>
        <div class="nav-item px-3 @is_visible">
            <NavLink class="nav-link" href="user/register">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Register
            </NavLink>
        </div>
        </NotAuthorized>
        </AuthorizeView>
        <div class="dropdown-divider"></div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="apidocs">
                <span class="bi bi-file-earmark-bar-graph" aria-hidden="true"></span> API docs
            </NavLink>
        </div>
    </nav>
    </div>
</div>
    </div>
</div>

@code {
    [Parameter]
    public string is_visible { get; set; } = "d-none";
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
